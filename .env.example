# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Production Environment Variables
# IMPORTANT: Update FRONTEND_URL when deploying to Vercel
FRONTEND_URL=https://YOUR-VERCEL-APP.vercel.app
NODE_ENV=production

# Mercado Pago Webhook Secret
# IMPORTANT: Get this from: https://www.mercadopago.com.br/developers/panel/credentials
MP_WEBHOOK_SECRET=your_webhook_secret_here

# Google AI Studio API Key (for Imagen 4.0)
GEMINI_API_KEY=your_gemini_api_key_here

# Resend Email Service (Free: 3000 emails/month)
# IMPORTANT: Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# Mercado Pago Application Credentials (REQUIRED FOR OAUTH)
# Get these from: https://www.mercadopago.com/developers/panel
MP_APP_ID=your_mp_app_id_here
MP_CLIENT_SECRET=your_mp_client_secret_here
MP_ACCESS_TOKEN=your_mp_access_token_here
# IMPORTANT: Update MP_REDIRECT_URI when deploying to Vercel
MP_REDIRECT_URI=https://YOUR-VERCEL-APP.vercel.app/owner-panel
