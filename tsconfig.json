{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    /* Type Roots */
    "typeRoots": [
      "./node_modules/@types"
    ], // Ensure @types are found
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src",
    "vite-env.d.ts",
    "types.ts",
    "constants.ts",
    "index.tsx",
    "components",
    "hooks",
    "pages",
    "services",
    "backend"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}