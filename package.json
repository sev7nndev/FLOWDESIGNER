{
  "name": "saas-template",
  "version": "1.0.0",
  "description": "A comprehensive SaaS template with frontend and backend.",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run install:all",
    "install:frontend": "npm install --prefix frontend",
    "install:backend": "npm install --prefix backend",
    "install:all": "npm run install:frontend && npm run install:backend",
    "frontend": "cd frontend && npm run dev",
    "backend": "node backend/server.cjs",
    "dev": "nodemon backend/server.cjs --port 32100",
    "start": "concurrently \"npm run frontend\" \"npm run dev\""
  },
  "keywords": [
    "saas",
    "template",
    "react",
    "node",
    "express"
  ],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "nodemon": "^3.1.0"
  },
  "devDependencies": {}
}